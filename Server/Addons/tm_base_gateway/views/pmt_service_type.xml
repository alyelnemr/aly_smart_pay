<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="pmt_type_form_view" model="ir.ui.view">
        <field name="name">pmt.type.form</field>
        <field name="model">pmt.type</field>
        <field name="arch" type="xml">
            <form>
                <group string="PMT Type">
                    <field name="name"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <record id="pmt_type_tree_view" model="ir.ui.view">
        <field name="name">pmt.type.tree</field>
        <field name="model">pmt.type</field>
        <field name="arch" type="xml">
            <tree string="PMT Type">
                    <field name="name"/>
                    <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="service_type_form_view" model="ir.ui.view">
        <field name="name">service.type.form</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <form>
                <group string="Service Type">
                    <field name="name"/>
                    <field name="description"/>
                </group>
            </form>
        </field>
    </record>

    <record id="service_type_tree_view" model="ir.ui.view">
        <field name="name">service.type.tree</field>
        <field name="model">service.type</field>
        <field name="arch" type="xml">
            <tree string="Service Type">
                    <field name="name"/>
                    <field name="description"/>
            </tree>
        </field>
    </record>
</odoo>
