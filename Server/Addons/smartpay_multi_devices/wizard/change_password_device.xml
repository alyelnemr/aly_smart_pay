<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- generate password wizard -->
        <record id="change_password_device_wizard_view" model="ir.ui.view">
            <field name="name">Change Password</field>
            <field name="model">change.password.wizard.device</field>
            <field name="arch" type="xml">
                <form string="Change Device Password">
                    <field name="device_ids"/>
                    <footer>
                        <button type="object" name="change_password_button_devices"
                                string="Change Password" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="change_password_wizard_device_tree_view" model="ir.ui.view">
            <field name="name">Change Password Devices</field>
            <field name="model">change.password.device</field>
            <field name="arch" type="xml">
                <!-- the device list is editable, but one cannot add or delete rows -->
                <tree string="Devices" editable="bottom" create="false" delete="false">
                    <field name="device_id" force_save="1" invisible="1"/>
                    <field name="user_id" force_save="1" invisible="1"/>
                    <field name="user_login" force_save="1"/>
                    <field name="new_password" force_save="1"
                           required="True" password="True"/>
                </tree>
            </field>
        </record>
        <act_window id="change_password_wizard_device_action"
                    name="Change Password"
                    src_model="api.access_token"
                    res_model="change.password.wizard.device"
                    view_type="form" view_mode="form"
                    key2="client_action_multi" target="new"
                    groups="base.group_erp_manager"/>

    </data>
</odoo>