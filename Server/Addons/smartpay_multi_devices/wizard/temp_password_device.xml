<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- generate password wizard -->
        <record id="change_password_wizard_view_device" model="ir.ui.view">
            <field name="name">Generate Temp Password Device</field>
            <field name="model">device.generate.password.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Temp Password Device">
                    <field name="device_ids"/>
                    <footer>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="generate_password_wizard_device_tree_view" model="ir.ui.view">
            <field name="name">Generate Password Devices</field>
            <field name="model">generate.temp.password.device</field>
            <field name="arch" type="xml">
                <tree string="Users" editable="bottom" create="false" delete="false">
                    <field name="device_login"/>
                    <field name="new_passwd" readonly="True"/>
                </tree>
            </field>
        </record>
        <act_window id="generate_password_wizard_device_action"
                    name="Generate Temp Password"
                    src_model="api.access_token"
                    res_model="device.generate.password.wizard"
                    view_type="form" view_mode="form"
                    key2="client_action_multi" target="new"
                    groups="base.group_erp_manager"/>

    </data>
</odoo>