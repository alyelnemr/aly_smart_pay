<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="form_inherit_helpdesk_request" model="ir.ui.view">
            <field name="name">form.inherit.helpdesk.request</field>
            <field name="model">smartpay_operations.request</field>
            <field name="inherit_id" ref="smartpay_operations.helpdesk_request_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="request_billing_acct" readonly="1"
                           attrs="{'invisible': [('request_type','not in',['service_bill_inquiry', 'pay_service_bill'])]}"/>
                </xpath>
                <xpath expr="//field[@name='provider_id']" position="after">
                    <field name="request_billing_acct" readonly="1"
                           attrs="{'invisible': [('request_type','not in',('service_bill_inquiry', 'pay_service_bill'))]}"/>
                    <field name="request_extra_billing_acct_keys" readonly="1"
                           attrs="{'invisible': [('request_type','not in',('service_bill_inquiry', 'pay_service_bill'))]}"/>
                    <field name="request_custom_properties" readonly="1"
                           attrs="{'invisible': [('request_type','not in',('service_bill_inquiry', 'pay_service_bill'))]}"/>
                </xpath>
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="request_inquiry_transaction_id"
                           readonly="1"
                           attrs="{'invisible': [('request_type','not in',['service_bill_inquiry', 'pay_service_bill'])]}"
                           options="{'no_create': True, 'no_edit': True}"/>
                    <field name="request_machine_serial" readonly="1"
                           attrs="{'invisible': [('request_type','not in',['service_bill_inquiry', 'pay_service_bill'])]}"
                    />
                </xpath>
                <xpath expr="//button[@name='toggle_active']"
                       position="before">
                    <button name="action_open_inquiry_transaction"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-files-o"
                            attrs="{'invisible': [('request_inquiry_transaction_id', '=', False)]}">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Inquiry Request</span>
                        </div>
                    </button>
                    <button name="open_user_device"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-users"
                            attrs="{'invisible': [('request_machine_serial', '=', False)]}">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Device</span>
                        </div>
                    </button>

                </xpath>
            </field>
        </record>
        <record id="helpdesk_request_tree_view_inherit" model="ir.ui.view">
            <field name="name">helpdesk.request.tree.view.inherit</field>
            <field name="model">smartpay_operations.request</field>
            <field name="inherit_id" ref="smartpay_operations.helpdesk_request_tree_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='request_type']" position="after">
                    <field name="request_billing_acct"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>